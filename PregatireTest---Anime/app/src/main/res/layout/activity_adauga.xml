<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaugaActivity">


    <TextView
        android:id="@+id/textViewAdaugaAnime"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Adauga Anime"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDenumire"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Denumire" />

        <EditText
            android:id="@+id/editTextDenumire"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="Denumire"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="An aparitie" />

        <EditText
            android:id="@+id/editTextAn"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="An aparitie"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewGenre"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Genre" />

        <EditText
            android:id="@+id/editTextGenre"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="genre"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewFinished"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="Finished" />

        <CheckBox
            android:id="@+id/cbDa"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:text="Da" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNrEp"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_weight="0.5"
            android:text="Numar episoade" />

        <EditText
            android:id="@+id/editTextNrEp"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:ems="10"
            android:layout_weight="0.5"
            android:hint="numar episoade"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonAdauga"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Adauga" />
    </LinearLayout>
</LinearLayout>